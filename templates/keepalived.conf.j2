vrrp_script chk_haproxy {
  script "killall -0 haproxy"
  interval 2
  weight 2
}

vrrp_instance VI_1 {
  interface {{ ansible_default_ipv4.interface }}
  virtual_router_id 51
  priority 101
  advert_int 1

  virtual_ipaddress {
    {{ virtual_ip }}/24 dev eth0
  }

  track_script {
    chk_haproxy
  }
}
